<h4>{{i18n (concat "discourse_automation.plan." plan.identifier ".title")}}</h4>

{{#each-in plannable.fields as |fieldName fieldSpecification|}}
  {{workflow-field
    fieldName=fieldName
    fieldSpecification=fieldSpecification
    object=plan
    workflow=workflow
    onChange=onChangeField
  }}
{{/each-in}}

{{#if plannable}}
  <div class="control">
    <span class="label">
      {{i18n 'discourse_automation.plan.delay.label'}}
    </span>

    <div class="input">
      {{input
        value=(readonly plan.delay)
        input=(action (mut plan.delay) value="target.value")
      }}
    </div>
  </div>
{{/if}}
